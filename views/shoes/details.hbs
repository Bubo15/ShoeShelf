<div class="offer-details">
    <h1>{{name}}</h1>
    <div class="info">
        <img src="{{imageUrl}}"
            alt="">
        <div class="description">{{description}}
            <br>
            <br>
            <p> <strong>Buyers:</strong> {{buyers}}</p>
            <br>
            <p class="price">${{price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if isCurrentUserCreatedShoe}}
        <a href="/shoe/edit/{{id}}">Edit</a>
        <a href="/shoe/delete/{{id}}">Delete</a>
        {{else}}
        <a href="/shoe/buy/{{id}}">Buy</a>
        <span>You bought it</span>
        {{/if}}
    </div>
</div>